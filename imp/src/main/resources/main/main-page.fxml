<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="430.0" prefWidth="347.0" spacing="20.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.mainGUI">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Hello! Please login with your cridentials" textAlignment="CENTER">
      <font>
         <Font name="System Bold" size="18.0" />
      </font>
   </Text>
   <TextField fx:id="textEmail" maxWidth="150.0" promptText="E-Mail" text="test@gmail.com">
      <VBox.margin>
         <Insets />
      </VBox.margin>
   </TextField>
   <TextField fx:id="textPassword" maxWidth="150.0" prefHeight="25.0" prefWidth="268.0" promptText="Password" text="1234">
      <VBox.margin>
         <Insets />
      </VBox.margin>
   </TextField>
   <MenuButton fx:id="menu" mnemonicParsing="false" text="ROLE">
     <items>
       <MenuItem fx:id="menuItemEmp" mnemonicParsing="false" onAction="#onEmployeeItemClick" text="Employee" />
       <MenuItem fx:id="menuItemSup" mnemonicParsing="false" onAction="#onSupervisorItemClick" text="Supervisor" />
     </items>
   </MenuButton>
    <Button onAction="#onLoginButton" prefHeight="31.0" prefWidth="72.0" text="Login">
      <VBox.margin>
         <Insets />
      </VBox.margin></Button>
   <Text fx:id="alertText" fill="#c90000" strokeType="OUTSIDE" strokeWidth="0.0">
      <font>
         <Font size="14.0" />
      </font>
   </Text>
</VBox>
